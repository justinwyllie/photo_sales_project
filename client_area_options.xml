<?xml version="1.0" encoding="UTF-8"?>
<client_area>
    <options>
        <system>
            <!-- system path to where the client images are stored. -->
            <clientAreaDirectory>client_area_files_dev</clientAreaDirectory>
            <!-- web path to where the client images are stored -->
            <clientAreaUrl>/photo_sales_project/client_area_files_dev</clientAreaUrl>
            <!-- web path to the Javascript file -->
            <jsUrl>/photo_sales_project/client_area.js</jsUrl>
            <!-- web path to the Underscore library dependency -->
            <underscoreUrl>/photo_sales_project/underscore.min.js</underscoreUrl>
            <!-- web path to the CSS file -->
            <cssUrl>/photo_sales_project/client_area.css</cssUrl>

            <adminEmail>info@justinwylliephotography.com</adminEmail>
            <appName>Photo ordering system.</appName>
        </system>

        <display>
            <thumbsPerPage>20</thumbsPerPage>
            <!-- 0 for off and 1 for on -->
            <proofsShowLabels>1</proofsShowLabels>
            <!-- 0 for off and 1 for on -->
            <printsShowLabels>1</printsShowLabels>
        </display>


    </options>
</client_area>